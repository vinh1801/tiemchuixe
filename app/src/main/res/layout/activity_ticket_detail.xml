<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/textViewTicketId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã phiếu: #12345"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#222"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/textViewCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khách hàng: Nguyễn Văn A"
            android:textSize="16sp"
            android:textColor="#444"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewCustomerPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewLicensePlate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewVehicleType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewCreatedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dịch vụ đi kèm"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#222"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>

        <!-- Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái hiện tại"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/textViewCurrentStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trạng thái: Đang chờ"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#388E3C"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/status_card_bg"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cập nhật trạng thái"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonStartWashing"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Bắt đầu rửa"
                        android:icon="@android:drawable/ic_media_play"
                        app:iconPadding="8dp"
                        app:cornerRadius="16dp"
                        app:iconGravity="textStart"
                        android:background="@drawable/button_start_washing_bg"
                        android:foreground="@drawable/button_ripple_effect"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:elevation="8dp"
                        android:layout_marginEnd="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonComplete"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Hoàn thành"
                        android:icon="@android:drawable/ic_menu_save"
                        app:iconPadding="8dp"
                        app:cornerRadius="16dp"
                        app:iconGravity="textStart"
                        android:background="@drawable/button_complete_bg"
                        android:foreground="@drawable/button_ripple_effect"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:elevation="8dp"
                        android:layout_marginEnd="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonCancel"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Hủy"
                        android:icon="@android:drawable/ic_menu_close_clear_cancel"
                        app:iconPadding="8dp"
                        app:cornerRadius="16dp"
                        app:iconGravity="textStart"
                        android:background="@drawable/button_cancel_bg"
                        android:foreground="@drawable/button_ripple_effect"
                        android:textColor="#F44336"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:elevation="4dp"
                        android:layout_marginStart="8dp"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Back Button Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@android:color/white">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Quay lại danh sách"
                android:icon="@android:drawable/ic_media_previous"
                app:iconPadding="8dp"
                app:cornerRadius="12dp"
                app:iconGravity="textStart"
                app:strokeColor="#FF2196F3"
                app:strokeWidth="2dp"
                android:textColor="#FF2196F3"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="0dp"
                android:background="@android:color/transparent"/>

        </androidx.cardview.widget.CardView>

        <!-- Delete Button Card (only visible if status is 'Đã hủy') -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@android:color/white">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteTicket"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="XÓA PHIẾU"
                android:icon="@android:drawable/ic_menu_delete"
                app:iconPadding="8dp"
                app:cornerRadius="12dp"
                app:iconGravity="textStart"
                android:textColor="#FFFFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="0dp"
                android:backgroundTint="#F44336"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView> 